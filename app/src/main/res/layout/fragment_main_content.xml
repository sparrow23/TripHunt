<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.triphunt.sparrow.sample.MainActivity"
    android:background="@drawable/f1">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="5dp">
        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/budget_id"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#FFF"
                android:hint="Budget"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:padding="7dp"
                android:password="false"
                android:singleLine="true" />

            <AutoCompleteTextView
                android:id="@+id/no_person_id"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#FFF"
                android:hint="@string/no_of_person"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="7dp"
                android:password="false"
                android:singleLine="true"
                android:windowSoftInputMode="adjustResize" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:background="#FFF"
                android:padding="7dp"
                style="@style/Widget.AppCompat.Spinner.DropDown"
                android:layout_toRightOf="@+id/phoneNumber"
                android:entries="@array/purpose"
                android:gravity="center"
                android:layout_gravity = "fill"
                android:layout_marginBottom="5dp" />


            <EditText
                android:id="@+id/no_day_id"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#FFF"
                android:hint="No Of Days"
                android:imeActionId="@+id/login"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified|actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:padding="7dp"
                android:phoneNumber="false"
                android:singleLine="true" />

            <EditText
                android:id="@+id/date_id"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#FFF"
                android:hint="Journey Date"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="2"
                android:padding="7dp"
                android:password="false"
                android:singleLine="true" />

            <EditText
                android:id="@+id/p_journey_id"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#FFF"
                android:hint="Starting Place Of Journey"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="2"
                android:padding="7dp"
                android:password="false"
                android:singleLine="true" />
            <Button
                android:id="@+id/Submit"
                style="@style/Button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:configChanges="orientation"
                android:imeOptions="flagNoExtractUi"
                android:padding="5dp"
                android:text="@string/action_sign_in"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:onClick="search"/>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_form"
        android:layout_alignParentStart="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="66dp"
        android:id="@+id/textView_show"
        android:textColor="@color/colorAccent"
        android:text="mimshad" />


</RelativeLayout>




